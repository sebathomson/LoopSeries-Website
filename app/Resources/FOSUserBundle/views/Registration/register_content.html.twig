<div class="col-sm-12 col-md-8 col-md-offset-2">
    <div class="col-sm-12 text-center"><h4>Sign Up - Loop Anime</h4></div>
    <div class="clearfix"></div><br/>
    <div class="col-sm-12 text-center">
        <p>To Register you will need a valid Inviation key - You can grab one from one of your friends or in Events published on our <a target="_blank" href="http://www.facebook.com/loop-anime">Facebook Page</a></p><br/>
        {% spaceless %}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    The follow errors just happened:<br>
                    {{ form_errors(form) }}
                    {% for children in form.children %}
                        {% if not children.vars.valid %}
                            {{ form_errors(children) }}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
        {% endspaceless %}

    </div>

    <div class="col-sm-12">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
            {{ form_widget(form._token) }}
            <p><b>{{ form_label(form.username, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                {{ form_widget(form.username, {'attr': {'class': 'form-control input-small', 'placeholder' : 'Username'}}) }}
            </p>
            <p><b>{{ form_label(form.email, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                {{ form_widget(form.email, {'attr': {'class': 'form-control input-small', 'placeholder' : 'someone@email.com'}}) }}
            </p>
            <p><b>{{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-small'}}) }}
            </p>
            <p><b>{{ form_label(form.plainPassword.second, "Re-Type Your Password: ", {'label_attr': {'class': 'font-bold'}}) }}</b>
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-small'}}) }}
            </p>
            <p><b>{{ form_label(form.invitation, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                {{ form_widget(form.invitation, {'attr': {'class': 'form-control input-small'}}) }}
            </p>
            <br>
            <button class="btn btn-primary col-sm-12">Sign Up</button>
        </form>
    </div>
</div>