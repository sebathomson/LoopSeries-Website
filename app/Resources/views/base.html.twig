<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}Loop-Anime. Your Portal for Animes!{% endblock %}</title>

    {% block stylesheets %}
        {% stylesheets
        'bundles/loopanimegeneral/css/bootstrap.css'
        'bundles/loopanimegeneral/css/bootstrap-glyphicons.css'
        'bundles/loopanimegeneral/css/theme.css'
        filter='cssrewrite'
        filter='?cssmin'
        output='css/generated/layout.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    {% endblock %}

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-44058685-1', 'loop-anime.com');
        ga('send', 'pageview');

    </script>

    {% block metatags %}
    {% endblock %}
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="description" content="Loop-Anime your portal for animes! Watch every anime here." />
    <meta name="keywords" content="Naruto, Shippuuden, anime, animes, naruto, bleach, dragon ball kai, naruto shippuuden, one piece, fairy tail, inuyasha, episodios, assistir online, completo, fansub, videos do naruto, youtube naruto" />
    <meta name="robots" content="index, follow" />
    <meta name="reply-to" content="admin@loop-anime.com" />
    <meta name="author" content="Josh_Lopes" />
    <meta name="copyright" content="Loop-anime.com" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

</head>

<body>
<!-- Begin Container -->
<div class="container">

    <!--  Header -->
    <div class="col-lg-12 header no-padding no-margin">
        <div class="col-lg-2 text-center"><a href="/"><img src="{{ asset('bundles/loopanimegeneral/images/loop_logo.png') }}" alt="logo" width="120px" height="120px" border="0" /></a></div>
        <div class="col-lg-10 no-padding no-margin" style="margin-top:20px">
            <div class="btn-group btn-group-justified">
                <a href="/animes/list" class="btn btn-success">Animes</a>
                <a href="/animes/categories" class="btn btn-success">Categories</a>
                <a href="/users" class="btn btn-success">Users</a>
                <a href="/user_cp" class="btn btn-success"><div class="glyphicon glyphicon-user"></div>User CP</a>
                <a href="/login" class="btn btn-danger">Sign In</a>
                <div class="btn btn-success dont_hover col-lg-8" style="width:2%">
                    <form method="get" action="/search.php" id="search_form">
                    <input type="hidden" name="q" value="search">
                    <div class="input-group" style="top:-2px; position:relative">
                        <input type="text" class="form-control input-small" placeholder="Search" name="q_search" value="">
                        <span class="input-group-addon input-small" onclick="$('#search_form').submit()"><div class="glyphicon glyphicon-search"></div></span>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--  End Header -->

    <div class="clearfix"></div>
    {% block body %}{% endblock %}

    </div>

    {% block javascripts %}
        {% javascripts
            'bundles/loopanimegeneral/js/*'
            output='js/generated/main.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
        <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0-rc1/js/bootstrap.min.js"></script>
        <script src="http://twitter.github.com/hogan.js/builds/2.0.0/hogan-2.0.0.js"></script>
    {% endblock %}

</body>
</html>